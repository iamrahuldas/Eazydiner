<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_empty="true">
    <layer-list>
        <item
            android:left="10dp"
            android:right="-5dp"
            android:top="5dp"
            android:bottom="5dp"
            android:drawable="@drawable/plus_white">
        </item>
    </layer-list>
</item>

<item android:state_expanded="true">
    <layer-list>
        <item
            android:left="10dp"
            android:right="-5dp"
            android:top="5dp"
            android:bottom="5dp"
            android:drawable="@drawable/minus_white">
        </item>
    </layer-list>
</item>
    
    
</selector>