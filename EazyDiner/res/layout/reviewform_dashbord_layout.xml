<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#44000000"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/llRestName"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="left|center"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/etRestNameBashboardReview"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="#00000000"
                            android:gravity="left|center"
                            android:hint="Restaurant Name"
                            android:paddingLeft="20sp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="2dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/etSubjectBashboardReview"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="#00000000"
                            android:gravity="left|center"
                            android:hint="Subject"
                            android:paddingLeft="20sp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="90dip"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="2dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/etWriteReviewsBashboardReview"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="#00000000"
                            android:gravity="left"
                            android:hint="Write your reviews..."
                            android:paddingLeft="20sp"
                            android:paddingTop="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="left|center"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/llRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textMyRatingDashboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_marginLeft="20dip"
                                android:text="My Rating"
                                android:textColor="#aa000000"
                                android:textSize="15sp" />

                            <RatingBar
                                android:id="@+id/userRating"
                                style="@style/foodRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_marginLeft="15dp"
                                android:numStars="5"
                                android:stepSize="10" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/llUploadImagesReview"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left|center"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:clickable="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvUploadImagesReview"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="left"
                                android:paddingBottom="5sp"
                                android:paddingLeft="20sp"
                                android:paddingTop="5sp"
                                android:text="UPLOAD IMAGES"
                                android:textColor="@color/theme_color"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPostReview"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="#ffffff"
                            android:clickable="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvPostReview"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/theme_color"
                                android:gravity="center_vertical"
                                android:paddingBottom="5sp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="5sp"
                                android:text="POST"
                                android:textColor="#ffffff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llReadPreviousReview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="38dp" >

                        <TextView
                            android:id="@+id/tvReadPreviousReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="READ PREVIOUS"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/ivDownArrowReview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10sp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/arrow_down" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>