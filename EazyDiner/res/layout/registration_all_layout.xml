<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    android:background="@color/theme_color"
    android:orientation="vertical" >
    
    
    <RelativeLayout
        android:id="@+id/Rlheader"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:padding="8dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_nav" />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_background"
        >
        <RelativeLayout 
            android:layout_marginTop="12dip"
	        android:background="#66000000"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_margin="15dip"
            >
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/fb_login"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="40dip"
	                android:id="@+id/ivFbLogin"
	                />
	            
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/gplus_login"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="10dip"
	                android:id="@+id/ivGplusLogin"
	                />
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Or sign up with your email"
	                android:textColor="#FFFFFF"
	                android:textSize="15sp"
	                android:layout_marginTop="15dip"
	                android:layout_gravity="center_horizontal"
	                />
	            
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:orientation="horizontal"
	                android:layout_marginTop="12dip"
	                >
	                
	                <RelativeLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="10dip"
	                    android:id="@+id/rlSignUp"
	                    android:clickable="true"
	                     >
	
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="SIGN UP"
	                        android:textStyle="bold"
	                        android:padding="5dip"
	                        android:textSize="20sp"
	                        android:textColor="#FFFFFF"
	                        />
	                   
	                </RelativeLayout>
	                <RelativeLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="12dip"
	                    android:id="@+id/rlSignIn"
	                    android:clickable="true"
	                     >
	                    
		                 <TextView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="SIGN IN"
		                        android:textStyle="bold"	                        
	                        	android:padding="5dip"
	                        	android:textSize="20sp"
		                        android:textColor="#FFFFFF"
		                        />
	                 </RelativeLayout>
                 </LinearLayout>
                 
	            </LinearLayout>
                
            </RelativeLayout>
            
        </LinearLayout>

</LinearLayout>
