<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.easydiner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/Rlcontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/pagercontainer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llSignupLayout"
            android:clickable="true"
            android:padding="10dip" />

        <LinearLayout
            android:id="@+id/llSignupLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textSigninSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SIGN UP / LOG IN"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivFbloginLanding"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginRight="25dip"
                    android:src="@drawable/fb_login" />

                <ImageView
                    android:id="@+id/ivGploginLanding"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginRight="25dip"
                    android:src="@drawable/gplus_login" />

                <ImageView
                    android:id="@+id/ivGenloginLanding"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/mail_login" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>