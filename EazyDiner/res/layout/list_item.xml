<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llListItem"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FBE2CF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ivListImage"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/ivPinTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@drawable/filter_image_orange_new" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/llListData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/ivNameList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dip"
                                android:text="Gulshan Chinese Food Corner"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTypeList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chinese"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvLocationList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Greater Kailash 1"
                                android:textSize="11sp"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:id="@+id/llDistenceLayout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/tvDistenceList"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:id="@+id/ivPriceList"
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:src="@drawable/price_3" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/ivReviewImageList"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@drawable/logo_slider" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="3dp"
                                        android:orientation="vertical"
                                        android:paddingLeft="8dp" >

                                        <LinearLayout
                                            android:id="@+id/llCriticRatingAll"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:visibility="invisible" >

                                            <TextView
                                                android:id="@+id/textCriticRating"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="CRITIC RATING"
                                                android:textSize="10sp" />

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="10dip"
                                                android:orientation="horizontal" >

                                                <TextView
                                                    android:id="@+id/tvCriticRatingList"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="23"
                                                    android:textSize="30sp" />

                                                <TextView
                                                    android:id="@+id/textTotalRating"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="/30"
                                                    android:textSize="16sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/textUserRating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="3dip"
                                            android:text="USER RATING"
                                            android:textSize="10sp" />

                                        <ImageView
                                            android:id="@+id/ivUserRatingList"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dip"
                                            android:src="@drawable/rating_4" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/arrow_list" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llListEazydeal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FBBA00"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingBottom="4dip"
                    android:visibility="gone"
                    android:paddingTop="4dip" >

                    <TextView
                        android:id="@+id/textEazyDealTag"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="left"
                        android:text="EAZYDEAL:" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip" >

                    <TextView
                        android:id="@+id/tvEazydeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="center|left" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>